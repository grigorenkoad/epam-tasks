@model TimeReportingSystem.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="form-signin">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h2 class="form-signin-heading">@ViewBag.Title</h2>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email)

        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
        @Html.ValidationMessageFor(m => m.Password)

        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
        <button class="btn btn-lg btn-primary btn-block" type="submit">Выполнить вход</button>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
